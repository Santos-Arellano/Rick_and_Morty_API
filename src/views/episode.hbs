<!-- src/views/episode.hbs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Episodio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{episode.name}}</h5>
                <p class="card-text"><strong>Fecha de emisi√≥n:</strong> {{episode.air_date}}</p>
                <p class="card-text"><strong>Episodio:</strong> {{episode.episode}}</p>
            </div>
        </div>
        <h5 class="mt-4">Personajes en este episodio:</h5>
        <div class="row">
            {{#each episode.characters}}
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <a href="/character/{{this.id}}" class="btn btn-primary">Ver detalles</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
