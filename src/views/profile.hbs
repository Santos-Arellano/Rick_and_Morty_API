<!-- src/views/profile.hbs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Perfil de {{user.username}}</h5>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Usuario:</strong> {{user.username}}</li>
                            <li class="list-group-item"><strong>Email:</strong> {{user.email}}</li>
                        </ul>
                        <a href="/change-password" class="btn btn-warning mt-3">Cambiar Contrase√±a</a>
                        
                        <h5 class="card-title mt-4">Episodios Favoritos</h5>
                        <ul class="list-group">
                            {{#each favorites}}
                                <li class="list-group-item">
                                    <a href="/episode/{{this.episode_id}}">{{this.episode_name}}</a>
                                    <form action="/favorites/delete" method="post" class="d-inline">
                                        <input type="hidden" name="favoriteId" value="{{this.id}}">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </li>
                            {{/each}}
                        </ul>

                        <h5 class="card-title mt-4">Personajes Favoritos</h5>
                        <ul class="list-group">
                            {{#each favoriteCharacters}}
                                <li class="list-group-item">
                                    <a href="/character/{{this.id}}">{{this.name}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
