<!-- src/views/characters.hbs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personajes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h5 class="mt-4">Buscar Personajes:</h5>
        <form action="/characters/search" method="post" class="mb-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar personaje..." name="searchTerm">
                <button class="btn btn-outline-secondary" type="submit">Buscar</button>
            </div>
        </form>
        
        <h5 class="mt-4">Personajes:</h5>
        <div class="row">
            {{#each characters}}
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            {{#if ../user}}
                                <form action="/favorite-characters" method="post" class="mt-3">
                                    <input type="hidden" name="characterId" value="{{this.id}}">
                                    <input type="hidden" name="characterName" value="{{this.name}}">
                                    <button type="submit" class="btn btn-primary">Agregar a Favoritos</button>
                                </form>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
